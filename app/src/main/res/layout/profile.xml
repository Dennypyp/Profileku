        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Hai, Nama Saya Denny Putra Yudha Pratama. Panggil saja Denny. Saya Berkuliah di Universitas Dinamika Prodi S1 Sistem Informasi dengan NIM 18410100181."
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     Motivasi saya mengikuti UKP LUG adalah untuk mengasah dan menyalurkan skill saya di bidang pemrograman dan organisasi."
        android:layout_marginBottom="50dp"
        />

</LinearLayout>